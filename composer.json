{
    "name": "westacks/telebot",
    "description": "Elegant PHP Telegram bot framework.",
    "type": "library",
    "homepage": "https://github.com/westacks/telebot",
    "license": "MIT",
    "authors": [
        {
            "name": "PunyFlash",
            "email": "puny.flash@gmail.com",
            "homepage": "https://github.com/PunyFlash"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "guzzlehttp/guzzle": "^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "soundasleep/html2text": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "WeStacks\\TeleBot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WeStacks\\TeleBot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "testdox": "phpunit --testdox"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "archive": {
        "exclude": ["/tests", "/docs"]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
